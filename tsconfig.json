{
  "compilerOptions": {
    "target": "ESNext",
    "outDir": "lib",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "lib/types",
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "types": ["node", "vitest/globals"]
  },
  "include": ["@types/**/*","src/**/*", "vite.config.ts","setupTests.ts"],
  "exclude": ["node_modules", "lib"]
}