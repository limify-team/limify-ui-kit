{
  "name": "limify-ui-kit",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "engines": {
    "node": ">=20.18.0 <21",
    "npm": ">=7.24.2"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts",
      "require": "./lib/index.js"
    },
    "./atoms": {
      "import": "./lib/atoms/index.js",
      "types": "./lib/src/atoms/index.d.ts",
      "require": "./lib/atoms/index.js"
    },
    "./molecules": {
      "import": "./lib/molecules/index.js",
      "types": "./lib/src/molecules/index.d.ts",
      "require": "./lib/molecules/index.js"
    },
    "./organisms": {
      "import": "./lib/organisms/index.js",
      "types": "./lib/src/organisms/index.d.ts",
      "require": "./lib/organisms/index.js"
    },
    "./hooks": {
      "import": "./lib/hooks/index.js",
      "types": "./lib/src/hooks/index.d.ts",
      "require": "./lib/hooks/index.js"
    },
    "./tokens": {
      "import": "./lib/tokens/index.js",
      "types": "./lib/src/tokens/index.d.ts",
      "require": "./lib/tokens/index.js"
    },
    "./utils": {
      "import": "./lib/utils/index.js",
      "types": "./lib/src/utils/index.d.ts",
      "require": "./lib/utils/index.js"
    }
  },
  "scripts": {
    "storybook:dev": "storybook dev -p 6006",
    "storybook:build": "storybook build --quiet --loglevel=error",
    "build": "tsc -b && vite build",
    "test": "vitest run --reporter=basic --reporter=hanging-process",
    "test:coverage": "vitest run --coverage --coverage.enabled",
    "format": "prettier --check \"**/*.ts\"",
    "format:fix": "prettier --check \"**/*.ts\" --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "storybook"
  ],
  "author": "Kamron Alimov <kamronalimov80@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@svgr/plugin-svgo": "^8.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.12",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-draft-04": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "install": "^0.13.0",
    "jsdom": "^26.1.0",
    "npm": "^11.5.2",
    "playwright": "^1.53.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "storybook": "^8.4.7",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-svgr": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
